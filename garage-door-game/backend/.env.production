# Production Environment Variables for Google Cloud Run
# Copy this file and update with your actual values

# Server Configuration
NODE_ENV=production
PORT=8080

# Database Configuration
DATABASE_URL=sqlite:./garage_game.db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-to-something-secure
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Google API Keys (Legacy - will be deprecated)
GOOGLE_STREET_VIEW_API_KEY=your-google-street-view-api-key
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Bing Maps API Keys (Primary for Street View functionality)
BING_MAPS_API_KEY=your-bing-maps-api-key

# Map Provider Configuration
MAP_PROVIDER=bing
ENABLE_PROVIDER_FALLBACK=true

# CORS Configuration
CORS_ORIGIN=https://itsgarages.itsfait.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880

# Security Headers
HELMET_ENABLED=true

# Logging
LOG_LEVEL=info
MORGAN_FORMAT=combined

# Health Check
HEALTH_CHECK_ENABLED=true
