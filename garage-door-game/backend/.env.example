# Server Configuration
PORT=3001
NODE_ENV=development
CORS_ORIGIN=http://localhost:5173

# Database
DATABASE_PATH=./database/garage_game.db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Google APIs (Legacy - will be deprecated)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
GOOGLE_STREET_VIEW_API_KEY=your-google-street-view-api-key

# Bing Maps APIs (Primary)
BING_MAPS_API_KEY=your-bing-maps-api-key

# Map Provider Configuration
MAP_PROVIDER=bing  # Options: 'google', 'bing', 'hybrid'
ENABLE_PROVIDER_FALLBACK=true

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Game Configuration
POINTS_PER_CORRECT_GUESS=10
POINTS_PER_JOB_SUBMISSION=5
GUESS_TIME_LIMIT_SECONDS=30

# Admin Configuration
ADMIN_EMAIL=admin@itsfait.com
ADMIN_PASSWORD=change-this-secure-password
